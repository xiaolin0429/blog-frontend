{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["element-plus/global", "@wangeditor/editor"],
    "ignoreDeprecations": "5.0",
    "allowJs": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "files": [],
